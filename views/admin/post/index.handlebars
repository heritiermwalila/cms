<h1>All Posts</h1>
{{> admin/msg}}
<table class="table table-bordered">
    <thead>
        <tr class="bg-blue">
            <th><input type="checkbox" class="form-control"></th>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>Comments</th>
            <th>Count Comments</th>
            <th>Feature Image</th>
            <th>Create at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <th><input type="checkbox" class="form-control"></th>
            <td>{{postTitle}}</td>
            <td>{{categoryId.categoryName}}</td>
            <td>{{postStatus}}</td>
            <td>{{allowComment}}</td>
            <td>{{CommentsIds.length}}</td>
            <td><img src="/uploads/{{postImage}}" alt="" width="100px" class="img-fluid img-thumbnail"></td>
            <td>{{#dateFormat createdDate 'Do MMM YYYY'}}{{/dateFormat}}</td>
            <td>
            <div class="row">
                <div class="col-sm-4">
                    <a href="/admin/post/edit/{{id}}" class="btn btn-primary"><i class="fa fa-edit"></i></a> 
                </div>
                <div class="col-sm-4">
                     <form action="/admin/post/delete/{{id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                    </form>
                </div>
            </div>
            </td>
            
        </tr>
        {{/each}}
    </tbody>
</table>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-end">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item active"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>