<h1>Edit post</h1>
{{#if update_message}}
<div class="alert alert-success">{{update_message}}</div>
{{/if}}
    <div class="row">
        <div class="col-sm-9">
            <form action="/admin/post/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Post Title</label>
                    
                    <input type="text" class="form-control" id="postTitle" placeholder="Post title" name="postTitle" value="{{post.postTitle}}">
                </div>
                
                <div class="form-group">
                    <label>Category</label>
                    <select name="category" id="category" class="form-control">
                        {{#select post.categoryId}}
                            {{#each categories}}
                                <option value="{{id}}">{{categoryName}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div class="form-group">
                    <select name="postStatus" id="" class="form-control">
                        {{#select post.postStatus}}
                        <option value="draft">Draft</option>
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                        {{/select}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Post tags</label>
                    <input type="text" class="form-control" id="postTags" placeholder="Post title" name="postTags">
                </div>
                <div class="form-group">
                    <label>Image Feature</label>
                    <input type="file" class="form-control" id="postImage" name="postImage">
                </div>
                <div class="form-group">
                    <label>Post content</label>
                    <textarea name="postContent" id="postContent" cols="30" rows="4" class="form-control" placeholder="Enter your post content">{{post.postContent}}</textarea>
                </div>
                <div class="form-group">
                    <input type="checkbox" name="allowComment" {{#if post.allowComment}} checked {{/if}}>
                    <label>Allow comments</label>
                </div>
                <button class="btn btn-primary">Update post</button>
                <a href="/admin/post/index" class="btn btn-info"> Cancel</a>
</form>
        </div>
        <div class="col-sm-3">
            <div class="card mb-3">
                    <div class="card-header">
                        Post feature Image
                    </div>
                    <div class="card-body">
                    <img src="/uploads/{{post.postImage}}" alt="" width="100%">
                    </div>
            </div>
            
            
            <div class="card">
                    <div class="card-header">
                        Post Feeds
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Comments: <span class="badge badge-primary">12</span></li>
                            <li class="list-group-item">Dapibus ac facilisis in</li>
                            <li class="list-group-item">Vestibulum at eros</li>
                        </ul>
                    </div>
            </div>
        </div>
    </div>

